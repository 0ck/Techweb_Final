{% extends '::base.html.twig' %}

{% block body -%}
<div class="container">
    <h1>Project list</h1>
    
    <table class="table" style="margin: 0 auto; color: white;">

        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Date de debut</th>
                <th>Date de fin</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.datedebutproject|date("m/d/Y") }}</td>
                <td>{{ entity.datefinproject|date("m/d/Y") }}</td>
                <td>
                <ul>
                   <a href="{{ path('project_show', { 'id': entity.id }) }}">
                        <button type="button" class="btn btn-primary" >show</button>
                   </a>
                   <a href="{{ path('project_edit', { 'id': entity.id }) }}">
                        <button type="button" class="btn btn-primary" >edit</button>
                    </a>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     <a href="{{ path('project_new') }}">  
    <button type="button" class="btn btn-primary" >Create a new project</button></a>
    </div>
    {% endblock %}
